<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BgMapleMapper">

	<sql id="mapleAddColumns">mapleCode,mapleName,mapleType,controllerPackage,entityPackage,mapleControllerUpper,mapleControllerLower,mapleEntityUpper,mapleEntityLower,tableCode,orderNum,status,effective,createUserId,createTime,modifyUserId,modifyTime</sql>
	<sql id="mapleColumns">mapleId,mapleCode,mapleName,mapleType,controllerPackage,entityPackage,mapleControllerUpper,mapleControllerLower,mapleEntityUpper,mapleEntityLower,tableCode,orderNum,status,effective,createUserId,createTime,modifyUserId,modifyTime</sql>
	
	<resultMap type="bgMaple" id="mapleResultMap">
		<id column="mapleId" property="mapleId"/>
		<result column="mapleCode" property="mapleCode"/>
		<result column="mapleName" property="mapleName"/>
		<result column="mapleType" property="mapleType"/>
		<result column="controllerPackage" property="controllerPackage"/>
		<result column="entityPackage" property="entityPackage"/>
		<result column="mapleControllerUpper" property="mapleControllerUpper"/>
		<result column="mapleControllerLower" property="mapleControllerLower"/>
		<result column="mapleEntityUpper" property="mapleEntityUpper"/>
		<result column="mapleEntityLower" property="mapleEntityLower"/>
		<result column="tableCode" property="tableCode"/>
		<result column="orderNum" property="orderNum"/>
		<result column="status" property="status"/>
		<result column="effective" property="effective"/>
		<result column="createUserId" property="createUserId"/>
		<result column="createTime" property="createTime"/>
		<result column="modifyUserId" property="modifyUserId"/>
		<result column="modifyTime" property="modifyTime"/>
	</resultMap>
	
	
	<!-- ****************************custom * start*********************************** -->
	
	
	<!-- ****************************custom * end  *********************************** -->
	
	
	<!-- ****************************common * satrt*********************************** -->
	<!-- 新增 -->
	<insert id="add" useGeneratedKeys="true" keyProperty="mapleId" parameterType="bgMaple">
		insert into bgMaple ( 
			<include refid="mapleAddColumns"/>
		) values (
			#{mapleCode},#{mapleName},#{mapleType},#{controllerPackage},#{entityPackage},#{mapleControllerUpper},#{mapleControllerLower},#{mapleEntityUpper},#{mapleEntityLower},#{tableCode},#{orderNum},#{status},#{effective},#{createUserId},#{createTime},#{modifyUserId},#{modifyTime}
		)
	</insert>
	
	<!-- 新增 -->
	<insert id="addByPd" useGeneratedKeys="true" keyProperty="mapleId" parameterType="pd">
		insert into bgMaple ( 
			<include refid="mapleAddColumns"/>
		) values (
			#{mapleCode},#{mapleName},#{mapleType},#{controllerPackage},#{entityPackage},#{mapleControllerUpper},#{mapleControllerLower},#{mapleEntityUpper},#{mapleEntityLower},#{tableCode},#{orderNum},#{status},#{effective},#{createUserId},#{createTime},#{modifyUserId},#{modifyTime}
		)
	</insert>
	
	<!-- 修改 -->
	<update id="edit" parameterType="bgMaple">
		update  bgMaple
			set 
				mapleCode = #{mapleCode},
				mapleName = #{mapleName},
				mapleType = #{mapleType},
				controllerPackage = #{controllerPackage},
				entityPackage = #{entityPackage},
				mapleControllerUpper = #{mapleControllerUpper},
				mapleControllerLower = #{mapleControllerLower},
				mapleEntityUpper = #{mapleEntityUpper},
				mapleEntityLower = #{mapleEntityLower},
				tableCode = #{tableCode},
				orderNum = #{orderNum},
				status = #{status},
				effective = #{effective},
				createUserId = #{createUserId},
				createTime = #{createTime},
				modifyUserId = #{modifyUserId},
				modifyTime = #{modifyTime}
			where 
				mapleId = #{mapleId}
	</update>
	
	<!-- 修改 -->
	<update id="editByPd" parameterType="pd">
		update  bgMaple
			set 
				mapleCode = #{mapleCode},
				mapleName = #{mapleName},
				mapleType = #{mapleType},
				controllerPackage = #{controllerPackage},
				entityPackage = #{entityPackage},
				mapleControllerUpper = #{mapleControllerUpper},
				mapleControllerLower = #{mapleControllerLower},
				mapleEntityUpper = #{mapleEntityUpper},
				mapleEntityLower = #{mapleEntityLower},
				tableCode = #{tableCode},
				orderNum = #{orderNum},
				status = #{status},
				effective = #{effective},
				createUserId = #{createUserId},
				createTime = #{createTime},
				modifyUserId = #{modifyUserId},
				modifyTime = #{modifyTime}
			where 
				mapleId = #{mapleId}
	</update>
	
	<!-- 删除 -->
	<delete id="deleteById" parameterType="int">
		delete from bgMaple 
		where 
			mapleId = #{mapleId}
	</delete>
	
	<!-- 删除 -->
	<delete id="deleteByPd" parameterType="pd">
		delete from bgMaple 
		where 
			mapleId = #{mapleId}
	</delete>
	
	<!-- 批量删除 -->
	<delete id="batchDeleteByIds" parameterType="String">
		delete from comTable 
		where 
			tableId in (#{ids})
	</delete>
	
	<!-- 通过id获取(类)数据 -->
	<select id="findById" parameterType="int" resultType="bgMaple">
		select 
			<include refid="mapleColumns"/>
		from 
			bgMaple
		where 
			mapleId = #{mapleId}
	</select>
	
	<!-- 通过id获取(PageData)数据  -->
	<select id="findPdById" parameterType="int" resultType="pd">
		select 
			<include refid="mapleColumns"/>
		from 
			bgMaple
		where 
			mapleId = #{mapleId}
	</select>
	
	<!-- 通过pd获取(PageData)数据  -->
	<select id="findPdByPd" parameterType="pd" resultType="pd">
		select 
			<include refid="mapleColumns"/>
		from 
			bgMaple
		where 
			mapleId = #{mapleId}
	</select>
	
	<!-- 获取(类)List数据  -->
	<select id="listAllByPd" parameterType="pd" resultMap="mapleResultMap">
		select 
			<include refid="mapleColumns"/>
		from 
			bgMaple
	</select>
	
	<!-- 通过id获取(PageData)数据  -->
	<select id="listPage" parameterType="bgPage" resultType="pd">
		select 
			<include refid="mapleColumns"/>
		from 
			bgMaple
		where 1=1
		<if test="pd.keywords != null and pd.keywords != ''"><!-- 角色检索 -->
			and (
				mapleCode LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
				mapleType LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
				controllerPackage LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
				entityPackage LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
	</select>
	<!-- ****************************common * end  ********************************** -->
	
</mapper>