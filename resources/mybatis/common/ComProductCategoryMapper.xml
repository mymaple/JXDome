<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ComProductCategoryMapper">

	<sql id="productCategoryColumns">productCategoryId,productCategoryCode,productCategoryName,productCategoryType,productCategoryStatus,headImgSrc,imgSrc1,imgSrc2,summary,orderNum,effective,createUserId,createTime,modifyUserId,modifyTime</sql>
	<sql id="productCategoryTable">com_product_category_info</sql>
	
	<resultMap type="comProductCategory" id="comProductCategoryResultMap">
		<id column="productCategoryId" property="productCategoryId"/>
		<result column="productCategoryCode" property="productCategoryCode"/>
		<result column="productCategoryName" property="productCategoryName"/>
		<result column="productCategoryType" property="productCategoryType"/>
		<result column="productCategoryStatus" property="productCategoryStatus"/>
		<result column="headImgSrc" property="headImgSrc"/>
		<result column="imgSrc1" property="imgSrc1"/>
		<result column="imgSrc2" property="imgSrc2"/>
		<result column="summary" property="summary"/>
		<result column="orderNum" property="orderNum"/>
		<result column="effective" property="effective"/>
		<result column="createUserId" property="createUserId"/>
		<result column="createTime" property="createTime"/>
		<result column="modifyUserId" property="modifyUserId"/>
		<result column="modifyTime" property="modifyTime"/>
	</resultMap>
	
	
	<!-- ****************************custom * start*********************************** -->
	
	<!-- ****************************custom * end  *********************************** -->
	
	
	<!-- ****************************common * satrt*********************************** -->
	<!-- 新增 -->
	<insert id="add" parameterType="comProductCategory">
		insert into 
	<include refid="productCategoryTable"/>
		( 
	<include refid="productCategoryColumns"/>
		) values (
			#{productCategoryId},#{productCategoryCode},#{productCategoryName},#{productCategoryType},#{productCategoryStatus},#{headImgSrc},#{imgSrc1},#{imgSrc2},#{summary},#{orderNum},#{effective},#{createUserId},#{createTime},#{modifyUserId},#{modifyTime}
		)
	</insert>
	
	<!-- 修改 -->
	<update id="edit" parameterType="comProductCategory">
		update
	<include refid="productCategoryTable"/>
		set 
			<if test="productCategoryCode!=null and productCategoryCode!=''">
			productCategoryCode = #{productCategoryCode},
			</if>
			<if test="productCategoryName!=null and productCategoryName!=''">
			productCategoryName = #{productCategoryName},
			</if>
			<if test="productCategoryType!=null and productCategoryType!=''">
			productCategoryType = #{productCategoryType},
			</if>
			<if test="headImgSrc!=null and headImgSrc!=''">
			headImgSrc = #{headImgSrc},
			</if>
			<if test="imgSrc1!=null and imgSrc1!=''">
			imgSrc1 = #{imgSrc1},
			</if>
			<if test="imgSrc2!=null and imgSrc2!=''">
			imgSrc2 = #{imgSrc2},
			</if>
			<if test="summary!=null and summary!=''">
			summary = #{summary},
			</if>
			<if test="orderNum!=null and orderNum!=''">
			orderNum = #{orderNum},
			</if>
			modifyUserId = #{modifyUserId},
			modifyTime = #{modifyTime}
		where 
			productCategoryId = #{productCategoryId} 
			and modifyTime = #{lastModifyTime}
	</update>
	
	<!-- 改变 -->
	<update id="change" parameterType="comProductCategory">
		update
	<include refid="productCategoryTable"/>
		set 
			<if test="productCategoryCode!=null and productCategoryCode!=''">
			productCategoryCode = #{productCategoryCode},
			</if>
			<if test="productCategoryName!=null and productCategoryName!=''">
			productCategoryName = #{productCategoryName},
			</if>
			<if test="productCategoryType!=null and productCategoryType!=''">
			productCategoryType = #{productCategoryType},
			</if>
			<if test="productCategoryStatus!=null and productCategoryStatus!=''">
			productCategoryStatus = #{productCategoryStatus},
			</if>
			<if test="headImgSrc!=null and headImgSrc!=''">
			headImgSrc = #{headImgSrc},
			</if>
			<if test="imgSrc1!=null and imgSrc1!=''">
			imgSrc1 = #{imgSrc1},
			</if>
			<if test="imgSrc2!=null and imgSrc2!=''">
			imgSrc2 = #{imgSrc2},
			</if>
			<if test="summary!=null and summary!=''">
			summary = #{summary},
			</if>
			<if test="orderNum!=null and orderNum!=''">
			orderNum = #{orderNum},
			</if>
			<if test="effective!=null and effective!=''">
			effective = #{effective},
			</if>
			modifyUserId = #{modifyUserId},
			modifyTime = #{modifyTime}
		where 
			productCategoryId = #{productCategoryId} 
			and modifyTime = #{lastModifyTime}
	</update>
	
	<!-- 删除 -->
	<delete id="deleteByPd" parameterType="pd">
		delete from 
	<include refid="productCategoryTable"/>
		where 
			productCategoryId = #{productCategoryId} 
	</delete>
	
	<!-- 批量删除 -->
	<delete id="batchDeleteByIds" parameterType="String">
		delete from 
 <include refid="productCategoryTable"/>
		where 
			CONCAT(productCategoryId) in 
        <foreach item="id" index="index" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
	</delete>
	
	<!-- 通过id获取(类)数据 -->
	<select id="findByPd" parameterType="pd" resultType="comProductCategory">
		select 
	<include refid="productCategoryColumns"/>
		from 
	<include refid="productCategoryTable"/>
		where 
			productCategoryId = #{productCategoryId} 
	</select>
	
	<!-- 获取(类)List数据  -->
	<select id="listByPd" parameterType="pd" resultMap="comProductCategoryResultMap">
		select 
	<include refid="productCategoryColumns"/>
		from 
	<include refid="productCategoryTable"/>
		where 1=1
		order by (orderNum+0) 
	</select>
	
	<!-- 获取(类)List数据  -->
	<select id="otherHave" parameterType="comProductCategory" resultMap="comProductCategoryResultMap">
		select 
	<include refid="productCategoryColumns"/>
		from 
	<include refid="productCategoryTable"/>
		where 1=1
			<if test="productCategoryId!=null and productCategoryId!=''">
			 and productCategoryId != #{productCategoryId} 
			</if>
			<if test="productCategoryCode!=null and productCategoryCode!=''">
			 and productCategoryCode = #{productCategoryCode}
			</if>
			<if test="productCategoryName!=null and productCategoryName!=''">
			 and productCategoryName = #{productCategoryName}
			</if>
			<if test="productCategoryType!=null and productCategoryType!=''">
			 and productCategoryType = #{productCategoryType}
			</if>
			<if test="productCategoryStatus!=null and productCategoryStatus!=''">
			 and productCategoryStatus = #{productCategoryStatus}
			</if>
			<if test="headImgSrc!=null and headImgSrc!=''">
			 and headImgSrc = #{headImgSrc}
			</if>
			<if test="imgSrc1!=null and imgSrc1!=''">
			 and imgSrc1 = #{imgSrc1}
			</if>
			<if test="imgSrc2!=null and imgSrc2!=''">
			 and imgSrc2 = #{imgSrc2}
			</if>
			<if test="summary!=null and summary!=''">
			 and summary = #{summary}
			</if>
			<if test="orderNum!=null and orderNum!=''">
			 and orderNum = #{orderNum}
			</if>
			<if test="effective!=null and effective!=''">
			 and effective = #{effective}
			</if>
			<if test="createUserId!=null and createUserId!=''">
			 and createUserId = #{createUserId}
			</if>
			<if test="createTime!=null and createTime!=''">
			 and createTime = #{createTime}
			</if>
			<if test="modifyUserId!=null and modifyUserId!=''">
			 and modifyUserId = #{modifyUserId}
			</if>
			<if test="modifyTime!=null and modifyTime!=''">
			 and modifyTime = #{modifyTime}
			</if>
		order by (orderNum+0) 
	</select>
	
	<!-- 通过id获取(PageData)数据  -->
	<select id="listPage" parameterType="bgPage" resultType="pd">
			select 
	<include refid="productCategoryColumns"/>
		from 
	<include refid="productCategoryTable"/>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				productCategoryCode LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
				productCategoryName LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
		order by (orderNum+0)
	</select>
	
	<!-- ****************************common * end  ********************************** -->
	
</mapper>